# -*- encoding: utf-8 -*-

require File.expand_path('../lib/<%= @namespace_path %>/version', __FILE__)

Gem::Specification.new do |gem|
<%= indent(1) %>gem.name          = <%= @name.inspect %>
<%= indent(1) %>gem.version       = <%= @namespace %>::VERSION
<%= indent(1) %>gem.summary       = %q{<%= @summary %>}
<%= indent(1) %>gem.description   = %q{<%= @description %>}
<%= indent(1) %>gem.license       = <%= @license.inspect %>
<%= indent(1) %>gem.authors       = <%= @authors.inspect %>
<%- if @email -%>
<%= indent(1) %>gem.email         = <%= @email.inspect %>
<%- end -%>
<%= indent(1) %>gem.homepage      = <%= @homepage.inspect %>

<%- if git? -%>
<%= indent(1) %>gem.files         = `git ls-files`.split($/)
<%- elsif hg? -%>
<%= indent(1) %>gem.files         = `hg manifest`.split($/)
<%- elsif svn? -%>
<%= indent(1) %>gem.files         = `svn ls -R`.split($/).select { |path| File.file?(path) }
<%- else -%>
<%= indent(1) %>gem.files         = Dir['{**/}{.*,*}'].select { |path| File.file?(path) }
<%- end -%>
<%= indent(1) %>gem.executables   = gem.files.grep(%r{^bin/}).map{ |f| File.basename(f) }
<%= indent(1) %>gem.test_files    = gem.files.grep(%r{^(test|spec|features)/})
<%= indent(1) %>gem.require_paths = ['lib']
<%- unless @dependencies.empty? -%>

<%-   @dependencies.sort.each do |name,version| -%>
<%= indent(1) %>gem.add_dependency '<%= name %>', '<%= version %>'
<%-   end -%>
<%- end -%>

<%- unless @development_dependencies.empty? -%>
<%-   @development_dependencies.sort.each do |name,version| -%>
<%= indent(1) %>gem.add_development_dependency '<%= name%>', '<%= version %>'
<%-   end -%>
<%- end -%>end
