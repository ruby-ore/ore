<%- if bundler? -%>
require 'yard'
YARD::Rake::YardocTask.new  
<%- else -%>
begin
  gem 'yard', '<%= @yard_dependency %>'
  require 'yard'

  YARD::Rake::YardocTask.new  
rescue LoadError => e
  task :yard do
    abort "Please run `gem install yard` to install YARD."
  end
end
<%- end -%>
task :doc => :yard
